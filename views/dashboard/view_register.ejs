
<div class="container-fluid ">
    <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12"><%- include('./header.ejs')%></div>
        <div class="col-lg-2 col-md-6 col-sm-12 "><%- include('./left.ejs')%></div>
        
    <div class="col-lg-10 col-md-12 col-sm-6 table-responsive-lg ">
    <% if(data.length>0) { %>      
    <table class="table table-bordered">
      <thead>

        <tr class="bg-danger">
          <th>Index</th>
          <th>username</th>
          <th>firstname</th>
          <th>lastname</th>
          <th>email</th>
          <th>password</th>
          <th>number</th>
          <th>address</th>
          <th>city</th>
          <th>state</th>
          <th>zip</th>
          <th colspan="2">action</th>
        </tr>
   <% for(var i=0; i<data.length; i++){ %>
    <tr>
      <td><%= i %></td>
      <td><%= data[i].username %></td>
      <td><%= data[i].firstname %></td>
      <td><%= data[i].lastname %></td>
      <td><%= data[i].email %></td>
      <td><%= data[i].password %></td>
      <td><%= data[i].number %></td>
      <td><%= data[i].address %></td>
      <td><%= data[i].city %></td>
      <td><%= data[i].state %></td>
      <td><%= data[i].zip %></td>
      <td class="text-center"> 
    <a role="button" class="btn btn-danger btn-sm " href='/remove/<%= data[i]._id %>'>Remove</a>
        
  <a  role="button" class="btn btn-primary btn-sm " href='/edit/<%= data[i]._id %>'>Edit</a>
     <a  role="button" class="btn btn-success btn-sm" href='/show/<%= data[i]._id %>'>Show</a>
      </td>
    </tr>
    
     
    

    <%} %>
    
     
  </table>
    <% } else { %>
    no record found
     <% } %>
   
   
      
    

  </div>
    </div>
    </div>